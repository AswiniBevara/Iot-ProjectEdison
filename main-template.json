{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "defaultValue": "canadacentral",
            "allowedValues": [
                "australiasoutheast",
                "canadacentral",
                "centralindia",
                "eastus",
                "japaneast",
                "southeastasia",
                "uksouth",
                "westeurope"
            ],
            "type": "String"
        },
        "tenantId": {
            "defaultValue": "",
            "type": "String",
            "metadata": {
                "description": "TenantId of the created Azure active directory application. For instructions, see  (https://docs.microsoft.com/en-us/azure/active-directory/develop/active-directory-howto-tenant) in the Microsoft documentation"
            }
        },
        "azureAccountName": {
            "defaultValue": "",
            "type": "String"
        },
        "azurePassword": {
            "defaultValue": "",
            "type": "SecureString"
        },
        "sessionId": {
            "defaultValue": "",
            "type": "String"
        },
        "cosmosdbModuleUri": {
            "defaultValue": "https://github.com/ChaitanyaGeddam/edison/raw/master/scripts/cosmos.zip",
            "type": "String"
        },
        "osDiskSizeGB": {
            "defaultValue": 30,
            "minValue": 30,
            "maxValue": 1023,
            "type": "Int",
            "metadata": {
                "description": "Disk size (in GB) to provision for each of the agent pool nodes. This value ranges from 0 to 1023. Specifying 0 will apply the default disk size for that agentVMSize."
            }
        },
        "servicePrincipalClientId": {
            "defaultValue": "",
            "type": "SecureString",
            "metadata": {
                "description": "Client ID (used by cloudprovider)"
            }
        },
        "servicePrincipalClientSecret": {
            "defaultValue": "",
            "type": "SecureString",
            "metadata": {
                "description": "The Service Principal Client Secret."
            }
        },
        "omsWorkspaceRegion": {
            "defaultValue": "southeastasia",
            "allowedValues": [
                "australiasoutheast",
                "canadacentral",
                "centralindia",
                "eastus",
                "japaneast",
                "southeastasia",
                "uksouth",
                "westeurope"
            ],
            "type": "String",
            "metadata": {
                "description": "Choose location for OMS Log Analytics to deploy. For more information, see https://docs.microsoft.com/en-us/azure/log-analytics/log-analytics-overview"
            }
        },
        "webAdminPackageUri": {
            "defaultValue": "https://github.com/ChaitanyaGeddam/edison/raw/master/code/Edison.AdminPortal.zip",
            "type": "String"
        },
        "signalrCapacity": {
            "defaultValue": 1,
            "allowedValues": [
                1,
                2,
                5,
                10,
                20,
                50,
                100
            ],
            "type": "Int",
            "metadata": {
                "description": "The number of SignalR Unit."
            }
        }
    },
    "variables": {
        "notificationHub": {
            "location": "[parameters('location')]",
            "skuName": "free",
            "namespaceType": "NotificationHub",
            "notificationHubNamespaceName": "[concat('NotificationHubNS', variables('suffix'))]",
            "notificationHubName": "[concat('NotificationHub', variables('suffix'))]"
        },
        "cosmosDbSettings": {
            "cosmosDbAccountName": "[concat('edisondbacc',variables('suffix'))]",
            "location": "[parameters('location')]",
            "offerType": "Standard",
            "cosmosDbName": "Edison",
            "cosmosCollEventCluster": "EventClusters",
            "cosmosCollResponses": "Responses",
            "cosmosCollDevices": "Devices",
            "cosmosCollActionPlans": "ActionPlans",
            "cosmosCollNotifications": "Notifications"
        },
        "automationSettings": {
            "automationAccountName": "[concat('AutomationAcc', variables('suffix'))]",
            "automationLocation": "eastus2",
            "automationSku": "Free",
            "runbookName": "container",
            "moduleName": "CosmosDB",
            "cosmosdbModuleUri": "[parameters('cosmosdbModuleUri')]",
            "runbookUri": "[concat(variables('baseUrl'),'scripts/initializeCosmosDb.ps1?token=AT3nZodnH3OGMRJJEcg_2jLBmXapDzZwks5cNY1awA%3D%3D')]",
            "sessionId": "[parameters('sessionId')]",
            "tenantId": "[parameters('tenantId')]",
            "azureAccountName": "[parameters('azureAccountName')]",
            "azurePassword": "[parameters('azurePassword')]"
        },
        "storageBlobSettings": {
            "storageAccountName": "[concat('edisonstrgeacc',variables('suffix'))]",
            "location": "[parameters('location')]",
            "containerName": "logs",
            "storageAccountType": "Standard_LRS"
        },
        "iothubSettings": {
            "location": "[parameters('location')]",
            "iotHubName": "[concat('edisonhub',variables('suffix'))]",
            "d2cMessageRetentionInDaysPeriod": 1,
            "d2cPartitionCount": 2,
            "skuName": "S1",
            "capacityUnits": 1,
            "d2cConsumerGroupName": "cg1"
        },
        "webSiteSettings": {
            "webAppHostingPlanName": "[concat('edisonwebplan',variables('suffix'))]",
            "location": "WestUS",
            "webAppSkuName1": "F1",
            "webAdminPackageUri": "[parameters('webAdminPackageUri')]",
            "webAdmin": "[concat('edisonWebAdmin',variables('suffix'))]"
        },
        "omsSettings": {
            "omsWorkspaceName": "[concat('omsworkspace', variables('suffix'))]",
            "omsWorkspaceRegion": "[parameters('omsWorkspaceRegion')]",
            "omsLogAnalyticsSku": "standalone",
            "dataRetention": 7
        },
        "kubernetesSettings": {
            "servicename": "[concat('kubernetes', variables('suffix'))]",
            "kubernetesVersion": "1.11.5",
            "location": "[parameters('location')]",
            "enableRBAC": true,
            "dnsPrefix": "clusterdns",
            "enableHttpApplicationRouting": true,
            "osType": "Linux",
            "agentVMSize": "Standard_D2_v2",
            "agentCount": 3,
            "servicePrincipalClientId": "[parameters('servicePrincipalClientId')]",
            "servicePrincipalClientSecret": "[parameters('servicePrincipalClientSecret')]",
            "networkPlugin": "kubenet",
            "osDiskSizeGB": "[parameters('osDiskSizeGB')]"
        },
        "acrSettings": {
            "acrName": "[concat('acr',variables('suffix'))]",
            "acrAdminUserEnabled": true,
            "location": "[parameters('location')]",
            "acrSku": "Basic"
        },
        "vm": {
            "pipName": "[concat('edisonpip',variables('suffix'))]",
            "location": "[parameters('location')]",
            "publicIpAddressType": "Static",
            "dnsLabelPrefix": "[concat('edisondns',variables('suffix'))]",
            "virtualNetworkName": "[variables('virtualNetworkName1')]",
            "addressPrefix": "10.0.0.0/16",
            "subnetName": "[variables('subnetName1')]",
            "subnetPrefix": "10.0.1.0/24",
            "nicName": "edison-nic",
            "subnetRef": "[concat(variables('vnetId'), '/subnets/', variables('subnetName1'))]",
            "vmName": "edisonVm",
            "vmUsername": "sysgainuser",
            "vmPassword": "Password@1234",
            "vmSize": "standard_A2",
            "imagePublisher": "Canonical",
            "imageOffer": "UbuntuServer",
            "ubuntuOSVersion": "16.04.0-LTS",
            "networkSecurityGroupName": "nsg"
        },
        "signalrSettings": {
            "location": "[parameters('location')]",
            "name": "singalredis",
            "pricingTier": "Standard_S1",
            "capacity": "[parameters('signalrCapacity')]"
        },
        "baseUrl": "https://raw.githubusercontent.com/sysgain/Iot-ProjectEdison/stage/",
        "suffix": "[substring(uniqueString(resourceGroup().id), 0, 4)]",
        "virtualNetworkName1": "[concat('edisonVnet', variables('suffix'))]",
        "subnetName1": "edisonSubnet",
        "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName1'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "name": "NotificationHub",
            "apiVersion": "2016-02-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'), 'nested/notification-hub.json?token=AT7l1SQB_0IAaP74m9bawRyRM9LqXUCPks5cNfMdwA%3D%3D')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "notificationHub": {
                        "value": "[variables('notificationHub')]"
                    }
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "Cosmosdb",
            "apiVersion": "2016-02-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'), 'nested/cosmosdb.json?token=AT7l1XWp4t58Q36-cec3xB4nFeGLLzGbks5cNfNBwA%3D%3D')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "CosmosDbSettings": {
                        "value": "[variables('CosmosDbSettings')]"
                    }
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "AutomationAccount",
            "apiVersion": "2016-02-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'), 'nested/automation-account.json?token=AT7l1aVrzd7fkOYKJOM6RaccJZi80qKpks5cNfNfwA%3D%3D')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "automationSettings": {
                        "value": "[variables('automationSettings')]"
                    },
                    "CosmosDbSettings": {
                        "value": "[variables('cosmosDbSettings')]"
                    }
                }
            },
            "dependsOn": [
                "Cosmosdb"
            ]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "StorageBlob",
            "apiVersion": "2016-02-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'), 'nested/storageblob.json?token=AT7l1X3v9IEqnHoHt3axrn1kz-iPeM2rks5cNfO9wA%3D%3D')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageBlobSettings": {
                        "value": "[variables('storageBlobSettings')]"
                    }
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "IotHub",
            "apiVersion": "2016-02-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'), 'nested/iothub.json?token=AT7l1Rdkk7rd6DojYdNyUHEwuNG1nbj7ks5cNfPwwA%3D%3D')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "iotHubSettings": {
                        "value": "[variables('iotHubSettings')]"
                    }
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "WebAdmin",
            "apiVersion": "2016-02-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'), 'nested/webadmin.json?token=AT7l1QPCU_D0r_kbh6-qYSNDpiW6u963ks5cNfQLwA%3D%3D')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "webSiteSettings": {
                        "value": "[variables('webSiteSettings')]"
                    }
                }
            },
            "dependsOn": [
                "Cosmosdb",
                "IotHub",
                "NotificationHub"
            ]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "Kubernetes",
            "apiVersion": "2015-01-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'),'nested/kubernetes.json?token=AT7l1S_rWovXj4PYpoR-SvS7zpmLVtvTks5cNfQmwA%3D%3D')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "omsSettings": {
                        "value": "[variables('omsSettings')]"
                    },
                    "kubernetesSettings": {
                        "value": "[variables('kubernetesSettings')]"
                    }
                }
            },
            "dependsOn": [
                "OmsWorkSpace"
            ]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "OmsWorkSpace",
            "apiVersion": "2015-01-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'),'nested/omsWorkspace.json?token=AT7l1fNhXoxnvQL_NjdaZdGSzLtfq9MMks5cNfRAwA%3D%3D')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "omsSettings": {
                        "value": "[variables('omsSettings')]"
                    }
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "AzureContainerRegistry",
            "apiVersion": "2015-01-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'),'nested/azureContainerRegistry.json?token=AT7l1cSPL6v7ZEZoMLOEuxqT50j9_zWkks5cNfRawA%3D%3D')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "acrSettings": {
                        "value": "[variables('acrSettings')]"
                    }
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "DockerVM",
            "apiVersion": "2015-01-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'),'nested/dockerVm.json?token=AT7l1b8QrqMFGYcGmTLhQV7-C6nVyiAtks5cNfR0wA%3D%3D')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vm": {
                        "value": "[variables('vm')]"
                    }
                }
            },
            "dependsOn": [
                "AzureContainerRegistry",
                "StorageBlob"
            ]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "SignalR",
            "apiVersion": "2015-01-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'),'nested/signalR.json?token=AT7l1QvaOmbJiRmeQWFBhj-jdbPW2ObKks5cNfSPwA%3D%3D')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "signalrSettings": {
                        "value": "[variables('signalrSettings')]"
                    }
                }
            },
            "dependsOn": []
        }
    ]
}
