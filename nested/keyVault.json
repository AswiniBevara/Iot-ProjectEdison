{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
   "keyVaultSettings":{
            "type": "object"
   }
  },
  "resources": [
    {
      "type": "Microsoft.KeyVault/vaults",
      "name": "[parameters('keyVaultSettings').keyVaultName]",
      "apiVersion": "2016-10-01",
      "location": "[parameters('keyVaultSettings').location]",
      "properties": {
        "enabledForDeployment": "[parameters('keyVaultSettings').enableVaultForDeployment]",
        "enabledForDiskEncryption": "[parameters('keyVaultSettings').enableVaultForDiskEncryption]",
        "enabledForTemplateDeployment": "[parameters('keyVaultSettings').enabledForTemplateDeployment]",
        "tenantId": "[parameters('keyVaultSettings').tenantId]",
        "accessPolicies": [
          {
            "tenantId": "[parameters('keyVaultSettings').tenantId]",
            "objectId": "[parameters('keyVaultSettings').objectId]",
            "permissions": {
              "keys": "[parameters('keyVaultSettings').keysPermissions]",
              "secrets": "[parameters('keyVaultSettings').secretsPermissions]"
            }
          }
        ],
        "sku": {
          "name": "[parameters('keyVaultSettings').skuName]",
          "family": "A"
        }
      }
    }
  ]
}