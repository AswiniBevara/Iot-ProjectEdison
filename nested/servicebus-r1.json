{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "serviceBusProperties": {
            "type": "object"
        },
        "omsSettings":{
            "type":"object"
        }
    },
    "resources": [
        {
            "name": "[parameters('serviceBusProperties').serviceBusNamespaceNameDr]",
            "type": "Microsoft.ServiceBus/namespaces",
            "apiVersion": "2017-04-01",
            "location": "[parameters('serviceBusProperties').locationDr]",
            "tags": {
                "IotSuiteType": "[parameters('serviceBusProperties').solutionType]"
            },
            "sku": {
                "name": "[parameters('serviceBusProperties').skuName]"
            },
            "properties": {},
            "resources": [
                {
                    "name": "[parameters('servicebusProperties').serviceBusQueueNameDr]",
                    "apiVersion": "2017-04-01",
                    "type": "Queues",
                    "dependsOn": [
                        "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBusProperties').serviceBusNamespaceNameDr)]"
                    ],
                    "properties": {
                        "lockDuration": "PT5M",
                        "maxSizeInMegabytes": "1024",
                        "requiresDuplicateDetection": "false",
                        "requiresSession": "false",
                        "defaultMessageTimeToLive": "P10675199DT2H48M5.4775807S",
                        "deadLetteringOnMessageExpiration": "false",
                        "duplicateDetectionHistoryTimeWindow": "PT10M",
                        "maxDeliveryCount": "10",
                        "autoDeleteOnIdle": "P10675199DT2H48M5.4775807S",
                        "enablePartitioning": "false",
                        "enableExpress": "false"
                    },
                    "resources": [
                        {
                            "apiVersion": "2015-08-01",
                            "name": "[concat(parameters('servicebusProperties').serviceBusQueueNameDr,'send')]",
                            "type": "AuthorizationRules",
                            "dependsOn": [
                                "[parameters('servicebusProperties').serviceBusQueueNameDr]"
                            ],
                            "properties": {
                                "keyName": "[concat(parameters('servicebusProperties').serviceBusQueueNameDr,'send')]",
                                "claimType": "SharedAccessKey",
                                "claimValue": "None",
                                "rights": [
                                    "Send",
                                    "Listen"
                                ],
                                "revision": -1
                            }
                        }
                    ]
                },
                {
                    "name": "Microsoft.Insights/service",
                    "type": "providers/diagnosticSettings",
                    "apiVersion": "2015-07-01",
                    "dependsOn": [
                        "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBusProperties').serviceBusNamespaceNameDr)]"
                    ],
                    "properties": {
                        "workspaceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', parameters('omsSettings').omsWorkspaceName)]",
                        "logs": [
                            {
                                "category": "OperationalLogs",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 0,
                                    "enabled": false
                                }
                            }
                        ],
                        "metrics": [
                            {
                                "timeGrain": "AllMetrics",
                                "category": "AllMetrics",
                                "enabled": true,
                                "retentionPolicy": {
                                    "enabled": false,
                                    "days": 0
                                }
                            }
                        ]
                    }
                }
            ]
        }
    ],
    "outputs": {
        "connectionString": {
            "type": "string",
            "value": "[listKeys(resourceId(concat('Microsoft.ServiceBus/namespaces/AuthorizationRules'),parameters('serviceBusProperties').serviceBusNamespaceNameDr,'RootManageSharedAccessKey'),'2015-08-01').primaryConnectionString]"
        },
        "sbPrimaryKey": {
            "type": "string",
            "value": "[listKeys(resourceId(concat('Microsoft.ServiceBus/namespaces/Queues/AuthorizationRules'),parameters('serviceBusProperties').serviceBusNamespaceNameDr,parameters('servicebusProperties').serviceBusQueueNameDr,concat(parameters('servicebusProperties').serviceBusQueueNameDr,'send')),'2015-08-01').PrimaryKey]"
        },
        "queueConnectionString": {
            "type": "string",
            "value": "[concat('Endpoint=sb://',parameters('serviceBusProperties').serviceBusNamespaceNameDr,'.servicebus.windows.net/;SharedAccessKeyName=',parameters('servicebusProperties').serviceBusQueueNameDr,'send;SharedAccessKey=',listKeys(resourceId(concat('Microsoft.ServiceBus/namespaces/Queues/AuthorizationRules'),parameters('serviceBusProperties').serviceBusNamespaceNameDr,parameters('servicebusProperties').serviceBusQueueNameDr,concat(parameters('servicebusProperties').serviceBusQueueNameDr,'send')),'2015-08-01').PrimaryKey,';EntityPath=',parameters('servicebusProperties').serviceBusQueueNameDr)]"
        }
    }
}
